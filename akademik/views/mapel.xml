<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="view_cdn_mapel_tree" model="ir.ui.view">
            <field name="name">cdn_mapel_tree</field>
            <field name="model">cdn.mapel</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Mata Pelajaran">
                    <field name="name" />
                    <field name="keterangan" />
                    <field name="tahunajaran_id" />
                    <field name="jenjang"/>
                    <field name="tingkat"/>
                    <field name="pengajar_id" />
                </tree>
            </field>
        </record>
        <!-- form view -->
        <record id="view_cdn_mapel_form" model="ir.ui.view">
            <field name="name">cdn_mapel_form</field>
            <field name="model">cdn.mapel</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Mata Pelajaran">
                    <header>
                        <button name="update_mapel" type="object" string="Update Mata Pelajaran" class="oe_highlight"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <!--button type="object" name="action_view_detail" class="oe_stat_button" icon="fa-pencil-square-o"-->
                                <!--field name="detail_count" widget="statinfo" string="Detail(s)"/-->
                                <!--field name="detail_ids" invisible="1"/-->
                            <!--/button-->
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Mata Pelajaran"/>
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <group>
                                <!-- <field name="mapel_id" /> -->
                                <field name="tahunajaran_id" />
                                <field name="jenjang"/>
                                <field name="tingkat"/>
                            </group>
                            <group>
                                <field name="jurusan_id" attrs="{'invisible':[('jenjang','!=','sma')]}"/>
                                <field name="pengajar_id" />
                            </group>
                        </group>
                        <group>
                            <field name="keterangan" />
                        </group>
                        <notebook>
                            <page string="Siswa">
                                <field name="siswa_ids" colspan="4">
                                    <tree>
                                        <field name="nis"/>
                                        <field name="name"/>
                                        <field name="nisn"/>
                                        <field name="jns_kelamin"/>
                                        <field name="tgl_lahir"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- search -->
        <record id="view_cdn_mapel_search" model="ir.ui.view">
            <field name="name">cdn_mapel</field>
            <field name="model">cdn.mapel</field>
            <field name="arch" type="xml">
                <search string="Mata Pelajaran">

                    <filter string="Name" name="filter_by_name" domain="[('name','=','')]" />
                    <filter string="Keterangan" name="filter_by_keterangan" domain="[('keterangan','=','')]" />
                    <field name="name" select="True"/>
                    <field name="keterangan" select="True"/>
                    <field name="tahunajaran_id" select="True"/>
                    <field name="pengajar_id" select="True"/>
                    <group string="Group By..">
                        <filter string="Tahunajaran" domain="[]" name="group_by_tahunajaran_id" context="{'group_by':'tahunajaran_id'}"/>
                        <filter string="pengajar" domain="[]" name="group_by_pengajar_id" context="{'group_by':'pengajar_id'}"/>
                    </group>
                </search>
            </field>
        </record>
  
        <!-- action window -->
        <record id="action_cdn_mapel" model="ir.actions.act_window">
            <field name="name">Mata Pelajaran</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">cdn.mapel</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{"search_default_fieldname":1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a new Mata Pelajaran
                </p><p>
                Click the Create button to add a new Mata Pelajaran
                </p>
            </field>
        </record>

        <!-- Message Wizard -->
        <record id="message_wizard_form" model="ir.ui.view">
            <field name="name">message.wizard.form</field>
            <field name="model">message.wizard</field>
            <field name="arch" type="xml">
                <form >
                    <p class="text-center">
                        <h3><field name="message" readonly="1"/></h3>
                    </p>
                    <footer>
                        <button name="action_ok" string="Ok" type="object" default_focus="1" class="oe_highlight"/> 
                    </footer>
                </form>
            </field>
        </record>

        <menuitem id="menu_cdn_mapel" name="Mata Pelajaran" parent="pengaturan_umum_menu_categ" action="action_cdn_mapel" sequence="30"/>
    </data>
</odoo>